package com.inheritance.crud.service;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.stereotype.Service;

import com.inheritance.crud.dto.UserDTO;
import com.inheritance.crud.model.Users;
import com.inheritance.crud.repository.UsersRepository;

@Service
public class UsersService {

    private final UsersRepository repository;

    public UsersService(UsersRepository repository) {
        this.repository = repository;
    }

    public List<UserDTO> getAllUsers() {
        return repository.findAll()
            .stream()
            .map(this::convertEntityToDTO)
            .collect(Collectors.toList());
    }

    public UserDTO getUserById(Long id) {
        Users user = repository.findById(id)
            .orElseThrow(() -> new RuntimeException("User not found with id " + id));
        return convertEntityToDTO(user);
    }

    public UserDTO saveUser(UserDTO dto) {
        Users user = new Users();
        user.setName(dto.getName());
        user.setEmail(dto.getEmail());
        user.setPhone(dto.getPhone());
        user = repository.save(user);
        return convertEntityToDTO(user);
    }

    public UserDTO updateUser(Long id, UserDTO dto) {
        Users user = repository.findById(id)
            .orElseThrow(() -> new RuntimeException("User not found with id " + id));
        user.setName(dto.getName());
        user.setEmail(dto.getEmail());
        user.setPhone(dto.getPhone());
        user = repository.save(user);
        return convertEntityToDTO(user);
    }

    public void deleteUser(Long id) {
        repository.deleteById(id);
    }

    private UserDTO convertEntityToDTO(Users user) {
        return new UserDTO(user.getId(), user.getName(), user.getEmail(), user.getPhone());
    }
}
