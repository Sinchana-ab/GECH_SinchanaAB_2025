package com.inheritance.crud.controller;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.inheritance.crud.model.Users;
import com.inheritance.crud.service.UsersService;


@Controller
public class HomeController {
	
	private UsersService service;
	
	
	public HomeController(UsersService service) {
		super();
		this.service = service;
	}


	@GetMapping({"/",""})
	public String home(Model model) {
		Users users = service.getAllStudent();
		model.addAttribute("users", users);
		return "home";
	}
	
}
